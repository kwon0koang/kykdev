<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_lcd_tv_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lcd on tv" />

        <Button
            android:id="@+id/btn_led_tv_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="led on tv" />

        <Button
            android:id="@+id/btn_oled_tv_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="oled on tv" />

        <Button
            android:id="@+id/btn_amoled_tv_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="amoled on tv" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>