<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start_count_livedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start count livedata" />

    <Button
        android:id="@+id/btn_start_count_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start count flow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_call_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Call API" />

            <Button
                android:id="@+id/btn_call_api_without_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Call API without progress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_network_process_value01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="value 01" />

            <TextView
                android:id="@+id/txt_network_process_value02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="value 02" />

            <TextView
                android:id="@+id/txt_network_process_value03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="value 03" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_call_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call activity" />

    <Button
        android:id="@+id/btn_call_api_in_fragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call api in fragments" />

    <FrameLayout
        android:id="@+id/layout_test_flow01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/layout_test_flow02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/layout_test_flow03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>